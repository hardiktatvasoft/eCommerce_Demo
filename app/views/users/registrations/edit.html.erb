<h2>Update <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: :true, method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row mb-5 mt-5">
      <div class="col-sm-6">
        <%= "Profile Image:" %>
        <br/>
        <% if current_user.avatar.url.present? %> <br/> <%= image_tag(current_user.avatar.url, size: "150x150") %>
        <br/>
        <br/>
         <%= f.check_box :remove_avatar %> <%= f.label :remove_avatar, "Remove Avatar" %>
           <% end %>
        <br/>
        <%= f.file_field :avatar %>
        <br/>
        <%= f.hidden_field :avatar_cache %> 
      </div>
    </div>

    <div class="row">    
      
      <div class="col-sm-6">
        <%= f.label :firstname %><br />
        <%= f.text_field :firstname, autofocus: true %>
      </div>
      
      <div class="col-sm-6">
        <%= f.label :lastname %><br />
        <%= f.text_field :lastname, autofocus: true %>
      </div>
    </div>

    <div class="row">  

      <div class="col-sm-6">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true %>
      </div>
      <div class="col-sm-6">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      </div>
    </div>  

    <div class="row">
      <div class="col-sm-6">
        <%= f.label :gender %><br />
      
          <%= f.radio_button :is_female, true %> <%= f.label :is_female, "Female" %> 
          <%= f.radio_button :is_female, false %> <%= f.label :is_female, "Male" %>
     
      </div>
      <div class="col-sm-6">
        <%= f.label :date_of_birth %><br />
        <%= f.date_select(:date_of_birth, start_year: 1947) %>
      </div>
    </div>
      
    <div class="row"> 
      <div class="col-sm-6"> 
        <div class="field">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>
      </div>
      <div class="col-sm-6">  
        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>  
    </div>  
    <div class="row">
      <div class="col-sm-6">
        <div class="field">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>
      </div>
    </div>
    
    <div class="row text-center mb-5">
      <div class="col-sm-12">
        <div class="actions">
          <%= f.submit "Update" %>
        </div>
      </div>
    </div>  
    <% end %>

    
    <div class="row">
      <div class="col-sm-12">
        <h3>Cancel my account</h3>
        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
        <%= link_to "Back", :back %>
       </div> 
    </div>  