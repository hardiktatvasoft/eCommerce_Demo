<nav class="navbar navbar-expand-md navbar-dark bg-dark">
  <%= link_to "ECommerceDemo", root_path, class: "navbar-brand" %>
  <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarCollapse">
    <div class="navbar-nav">
      <%= link_to "Home", root_path, class: "nav-item nav-link" %>
      <a href="/contact-us" class="nav-item nav-link">Contact Us</a>
      <a href="/about-us" class="nav-item nav-link">About Us</a>
    </div>
    <div class="navbar-nav ml-auto">
      <% if current_user.present? 
          if current_user.avatar.url.present?
            avatar_img = current_user.avatar.url
          else
            avatar_img = "default-avatar.png"
          end  
        %>
        <%= link_to image_tag(avatar_img, size: "30x30"), edit_user_registration_path, class: "nav-item nav-link" %>
        <%= link_to "Logout", destroy_user_session_path, :method => :delete, class: "nav-item nav-link" %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "nav-item nav-link" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "nav-item nav-link" %>
      <% end %>
    </div>
    <% if current_user.present? && request.env['PATH_INFO'] != '/cart' %>
    <a href="/cart" class="float">
      <i class="glyphicon glyphicon-shopping-cart my-float"></i>
    </a>
    <% end %>
  </div>
</nav>
<% if request.env['PATH_INFO'] == '/' %>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <div class="carousel-inner">
    <div class="item active">
      <img src="/assets/banner1.png" alt="banner1">
    </div>

    <div class="item">
      <img src="/assets/banner2.png" alt="banner2">
    </div>

    <div class="item">
      <img src="/assets/banner3.png" alt="banner3">
    </div>
  </div>

  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<% else %>
  <div class="banner">
    <img src="/assets/banner.jpg" alt="banner">
  </div>
<% end %>